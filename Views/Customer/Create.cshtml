@model CustomerModel

@{
    ViewData["Title"] = "Adicionar Cliente";
}

<h1>@ViewData["Title"]</h1>

<form method="POST" action="/Customer/Create">

    @await Html.PartialAsync("_CustomerFormPartial", Model)

    <div>
        <button type="button" class="btn btn-primary" onclick="validationHandler(event)">Adicionar Cliente</button>
        <button type="button" class="btn btn-secondary" onclick="back()">Voltar</button>
    </div>

</form>


@if (TempData.ContainsKey("ToastMessage"))
{
    <script>
        sendMessage("@TempData["ToastMessage"]", "@TempData["ToastType"]");
    </script>
}    

@section Scripts {
    <script src="~/js/customers/scripts.js" asp-append-version="true"></script>
}
