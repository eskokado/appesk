@model List<CustomerModel>

<table class="table">
    <thead>
        <tr>
            <th>Nome/Razão Social</th>
            <th>E-mail</th>
            <th>Telefone</th>
            <th>Data de Cadastro</th>
            <th>Bloqueado</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr class="@(customer.Id % 2 == 0 ? "even-row" : "odd-row")">
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.RegistrationDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <input type="checkbox" disabled @(customer.IsBlocked ? "checked" : "") />
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Customer", new { id = customer.Id })" class="btn btn-primary">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
